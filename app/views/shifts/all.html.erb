<h1><%= link_to 'Adnat', home_path %></h1>

<p>Logged in as <%= @user.name %></p>
<p font-size=10px><%= link_to 'Log out', logout_path%></p>

<table border="1">
  <thead>
    <th>Employee name</th>
    <th>Shft date</th>
    <th>Start time</th>
    <th>Finish time</th>
    <th>Break length (minutes)</th>
    <th>Hours Worked</th>
    <th>Shift cost</th>
  </thead>
  <% for shift in @shifts do %>
    <% for user in @users do %><% if user.id==shift.user_id %>
  <tr>
    <td><%= user.name %></td>
    <td><%= shift.start.strftime('%d/%m/%Y') %></td>
    <td><%= shift.start.strftime('%I:%M') %></td>
    <td><%= shift.finish.strftime('%I:%M') %></td>
    <td><%= shift.break_length%></td>
    <td><%= shift.finish-shift.start.to_datetime %>
  </tr>
  <% end %><% end %>
  <% end %>
</table>